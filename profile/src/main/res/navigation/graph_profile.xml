<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    app:startDestination="@id/profileFragment">

    <fragment
        android:id="@+id/profileFragment"
        android:name="gr.cpaleop.profile.presentation.ProfileFragment"
        android:label="ProfileFragment"
        tools:layout="@layout/fragment_profile">

        <action
            android:id="@+id/profileToProfileOptionsDialog"
            app:destination="@id/profileOptionsDialog" />

        <action
            android:id="@+id/profileToSelectThemeDialog"
            app:destination="@id/profileSelectThemeDialog" />

        <action
            android:id="@+id/profileToSplash"
            app:destination="@id/splashActivity" />
    </fragment>

    <dialog
        android:id="@+id/profileSelectThemeDialog"
        android:name="gr.cpaleop.profile.presentation.settings.SelectThemeBottomSheetDialogFragment"
        android:label="SelectThemeBottomSheetDialogFragment"
        tools:layout="@layout/dialog_fragment_select_theme" />

    <dialog
        android:id="@+id/profileOptionsDialog"
        android:name="gr.cpaleop.profile.presentation.options.ProfileOptionsDialogFragment"
        android:label="ProfileOptionsDialogFragment"
        tools:layout="@layout/dialog_fragment_profile_options">

        <argument
            android:name="type"
            app:argType="string"
            app:nullable="false" />

        <argument
            android:name="profileValue"
            app:argType="string"
            app:nullable="false" />
    </dialog>

    <activity
        android:id="@+id/splashActivity"
        android:name="gr.cpaleop.teithe_apps.presentation.SplashActivity"
        android:label="SplashActivity" />
</navigation>