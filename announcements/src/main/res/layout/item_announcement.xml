<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="16dp"
    android:layout_marginEnd="16dp"
    android:layout_marginBottom="18dp"
    android:background="@drawable/shape_round_ripple"
    android:elevation="1dp">

    <TextView
        android:id="@+id/announcementTitle"
        style="@style/Theme.AnnouncementTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@id/announcementCategory"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="ANNOUNCEMENT TITLEANNOUNCEMENT TITLEANNOUNCEMENT TITLEANNOUNCEMENT TITLE" />

    <TextView
        android:id="@+id/announcementCategory"
        style="@style/Theme.FilterStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:ellipsize="end"
        android:maxLines="1"
        app:layout_constraintBottom_toTopOf="@id/announcementContent"
        app:layout_constraintEnd_toStartOf="@id/announcementHasAttachments"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toStartOf="@id/announcementContent"
        app:layout_constraintTop_toBottomOf="@id/announcementTitle"
        tools:text="6ο ΕΞΑΜΗΝΟ" />

    <TextView
        android:id="@+id/announcementHasAttachments"
        style="@style/Theme.FilterStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="@string/announcements_has_attachments"
        app:layout_constraintBottom_toBottomOf="@id/announcementCategory"
        app:layout_constraintEnd_toEndOf="@id/announcementContent"
        app:layout_constraintStart_toEndOf="@id/announcementCategory"
        app:layout_constraintTop_toTopOf="@id/announcementCategory" />

    <TextView
        android:id="@+id/announcementContent"
        style="@style/Theme.AnnouncementBody"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="18dp"
        android:layout_marginEnd="24dp"
        android:lines="7"
        android:maxLines="7"
        app:layout_constraintBottom_toTopOf="@id/announcementPublisher"
        app:layout_constraintTop_toBottomOf="@id/announcementCategory"
        tools:text="ANNOUNCEMENT contentANNOUNCEMENT contentANNOUNCEMENT contentANNOUNCEMENT contentANNOUNCEMENT contentANNOUNCEMENT contentANNOUNCEMENT contentANNOUNCEMENT contentANNOUNCEMENT contentANNOUNCEMENT contentANNOUNCEMENT contentANNOUNCEMENT contentANNOUNCEMENT contentANNOUNCEMENT contentANNOUNCEMENT contentANNOUNCEMENT contentANNOUNCEMENT contentANNOUNCEMENT contentANNOUNCEMENT contentANNOUNCEMENT content" />

    <TextView
        android:id="@+id/announcementPublisher"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:fontFamily="@font/proximanova_regular"
        android:gravity="center"
        android:maxLines="1"
        android:paddingStart="4dp"
        android:paddingTop="14dp"
        android:paddingEnd="4dp"
        android:paddingBottom="14dp"
        android:textColor="@color/colorOnPrimary_38"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/announcementContent"
        app:layout_constraintVertical_bias="1"
        app:layout_constraintWidth_percent="0.5"
        tools:text="Κ. ΒΙΤΣΑΣ" />

    <TextView
        android:id="@+id/announcementDate"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:fontFamily="@font/proximanova_regular"
        android:gravity="center"
        android:maxLines="1"
        android:paddingStart="4dp"
        android:paddingTop="14dp"
        android:paddingEnd="4dp"
        android:paddingBottom="14dp"
        android:textColor="@color/colorOnPrimary_38"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/announcementPublisher"
        app:layout_constraintTop_toBottomOf="@id/announcementContent"
        app:layout_constraintVertical_bias="1"
        tools:text="1/1/2020" />
</androidx.constraintlayout.widget.ConstraintLayout>