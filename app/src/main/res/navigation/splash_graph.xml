<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/splash_graph"
    app:startDestination="@id/splashFragment">

    <fragment
        android:id="@+id/splashFragment"
        android:name=".presentation.SplashFragment"
        android:label="SplashFragment"
        tools:layout="@layout/fragment_splash">

        <action
            android:id="@+id/splash_to_authentication"
            app:destination="@id/authenticationActivity"
            app:enterAnim="@anim/anim_fade_in"
            app:exitAnim="@anim/anim_fade_out"
            app:popEnterAnim="@anim/anim_pop_enter_fade_in"
            app:popExitAnim="@anim/anim_fade_out" />

        <action
            android:id="@+id/splash_to_dashboard"
            app:destination="@id/dashboardActivity"
            app:enterAnim="@anim/anim_fade_in"
            app:exitAnim="@anim/anim_fade_out"
            app:popEnterAnim="@anim/anim_pop_enter_fade_in"
            app:popExitAnim="@anim/anim_fade_out" />
    </fragment>

    <activity
        android:id="@+id/authenticationActivity"
        android:name="gr.cpaleop.authentication.presentation.AuthenticationActivity"
        android:label="AuthenticationActivity"
        app:moduleName="authentication" />

    <activity
        android:id="@+id/dashboardActivity"
        android:name="gr.cpaleop.dashboard.presentation.DashboardActivity"
        android:label="DashboardActivity"
        app:moduleName="dashboard" />
</navigation>