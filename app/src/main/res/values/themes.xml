<resources>
    <!-- Base application theme. -->
    <style name="Theme.Itteitheapps" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/colorPrimaryVariant</item>
        <item name="colorOnPrimary">@color/colorOnPrimary</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/colorPrimary</item>
        <!-- Customize your theme here. -->
        <item name="android:windowBackground">@color/colorPrimary</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>

    <style name="Theme.FilterStyle" parent="Theme.Itteitheapps">
        <item name="android:background">@drawable/shape_round_on_primary</item>
        <item name="android:paddingStart">12dp</item>
        <item name="android:paddingEnd">12dp</item>
        <item name="android:paddingTop">6dp</item>
        <item name="android:paddingBottom">6dp</item>
        <item name="android:fontFamily">@font/googlesans_regular</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textSize">12sp</item>
    </style>

    <!-- Easier to extend Chip.Choice because it includes some desired color effects. -->
    <style name="Widget.IOSched.FilterChip" parent="Widget.MaterialComponents.Chip.Choice">
        <item name="chipIcon">@drawable/ic_launcher_background</item>
        <item name="chipIconVisible">true</item>
        <item name="chipStrokeColor">@color/colorPrimaryVariant</item>
        <item name="textStartPadding">0dp</item>
    </style>

    <style name="Widget.IOSched.FilterChip.Closeable">
        <item name="chipIcon">@drawable/ic_chip_dot</item>
        <item name="closeIcon">@drawable/ic_chip_clear</item>
        <item name="closeIconVisible">true</item>
        <item name="textEndPadding">2dp</item>
    </style>
</resources>