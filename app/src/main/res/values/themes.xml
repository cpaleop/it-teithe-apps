<resources>
    <!-- Base application theme. -->
    <style name="Theme.Itteitheapps" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorOnPrimary">@color/colorOnPrimary</item>
        <item name="colorPrimaryVariant">@color/colorPrimaryVariant</item>
        <item name="colorOnBackground">@color/colorOnPrimary_87</item>
        <item name="colorControlHighlight">@color/pink_200_80op</item>
        <item name="colorSecondary">@color/pink_200</item>
        <item name="colorSecondaryVariant">@color/pink_200_dark</item>
        <item name="colorOnSecondary">@color/white</item>
        <item name="colorSurface">@color/colorSurface</item>
        <item name="colorAccent">@color/colorPrimary</item>
        <item name="colorControlNormal">@color/colorControlNormal</item>
        <item name="actionModeStyle">@style/Theme.Itteitheapps.ActionModeStyle</item>
        <item name="android:actionModeStyle">@style/Theme.Itteitheapps.ActionModeStyle</item>
        <item name="android:colorBackground">@color/white_50</item>
        <item name="android:statusBarColor">@color/colorBackground</item>
        <item name="android:windowBackground">@color/colorBackground</item>
        <item name="android:windowLightStatusBar">true</item>
        <!--<item name="badgeStyle">@style/Theme.Itteitheapps.BottomNavigationView</item>-->
        <item name="android:windowActivityTransitions">true</item>
        <item name="textAppearanceSubtitle1">@style/Theme.TextAppearanceSubtitle1</item>
        <item name="textAppearanceBody2">@style/Theme.TextAppearanceBody2</item>

        <!-- Material Dialogs -->
        <item name="md_corner_radius">8dp</item>
        <item name="md_font_title">@font/commissioner_medium</item>
        <item name="md_font_body">@font/commissioner_regular</item>
        <item name="md_font_button">@font/commissioner_medium</item>
        <item name="md_color_button_text">?attr/colorPrimary</item>
        <item name="md_ripple_color">?attr/colorPrimary</item>
        <item name="md_divider_color">?attr/colorPrimary</item>
        <item name="md_line_spacing_body">0</item>

        <!-- Bottom sheet dialog -->
        <item name="bottomSheetDialogTheme">@style/BottomSheetDialog_Rounded</item>
    </style>

    <style name="Theme.Itteitheapps.CardActivity" parent="Theme.Itteitheapps">
        <item name="android:statusBarColor">@color/colorBackgroundCard</item>
    </style>

    <style name="Theme.Itteitheapps.ActionModeStyle" parent="Theme.Itteitheapps">
        <item name="background">@color/colorPrimary</item>
        <item name="actionModeBackground">@color/colorPrimary</item>
        <item name="android:actionModeBackground">@color/colorPrimary</item>
        <item name="android:actionMenuTextColor">?attr/colorOnPrimary</item>
        <item name="android:textColor">?attr/colorPrimary</item>
    </style>

    <style name="Theme.TextAppearanceSubtitle1" parent="TextAppearance.MaterialComponents.Subtitle1">
        <item name="android:textColor">@color/colorOnPrimary_87</item>
        <item name="android:fontFamily">@font/commissioner_bold</item>
        <item name="fontFamily">@font/commissioner_bold</item>
    </style>

    <style name="Theme.TextAppearanceBody2" parent="TextAppearance.MaterialComponents.Body2">
        <item name="android:textColor">@color/colorOnPrimary_60</item>
        <item name="android:fontFamily">@font/commissioner_regular</item>
        <item name="fontFamily">@font/commissioner_regular</item>
    </style>

    <style name="Theme.AnnouncementTitle" parent="Theme.Itteitheapps">
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">16dp</item>
        <item name="android:paddingTop">16dp</item>
        <item name="android:paddingBottom">16dp</item>
        <item name="android:gravity">center</item>
        <item name="android:lines">3</item>
        <item name="android:lineSpacingExtra">3dp</item>
        <item name="android:maxLines">3</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textAppearance">@style/Theme.TextAppearanceSubtitle1</item>
    </style>

    <style name="Theme.AnnouncementBody" parent="Theme.Itteitheapps">
        <item name="android:ellipsize">end</item>
        <item name="android:lineSpacingExtra">4dp</item>
        <item name="android:textAppearance">@style/Theme.TextAppearanceBody2</item>
    </style>

    <style name="Theme.FilterStyle" parent="Theme.Itteitheapps">
        <item name="android:background">@drawable/shape_filter_enabled</item>
        <item name="android:paddingStart">12dp</item>
        <item name="android:paddingEnd">12dp</item>
        <item name="android:paddingTop">6dp</item>
        <item name="android:paddingBottom">6dp</item>
        <item name="android:layout_margin">4dp</item>
        <item name="android:fontFamily">@font/commissioner_regular</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">?attr/colorSecondary</item>
        <item name="android:textSize">12sp</item>
    </style>

    <!-- BottomSheet Dialog-->
    <style name="BottomSheetDialog_Rounded" parent="@style/ThemeOverlay.MaterialComponents.BottomSheetDialog">
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:windowLayoutInDisplayCutoutMode">shortEdges</item>
        <item name="bottomSheetStyle">@style/BottomSheet_Rounded</item>
    </style>

    <style name="BottomSheet_Rounded" parent="Widget.MaterialComponents.BottomSheet">
        <item name="shapeAppearanceOverlay">@style/ShapeAppearanceBottomSheetDialog_Rounded</item>
    </style>

    <style name="ShapeAppearanceBottomSheetDialog_Rounded" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopRight">16dp</item>
        <item name="cornerSizeTopLeft">16dp</item>
        <item name="cornerSizeBottomRight">0dp</item>
        <item name="cornerSizeBottomLeft">0dp</item>
    </style>

    <style name="Theme.Itteitheapps.BottomNavigationView">
        <item name="fontFamily">@font/commissioner_regular</item>
        <item name="backgroundColor">?attr/colorSecondary</item>
        <item name="android:background">@drawable/shape_top_round_primary_variant</item>
    </style>

    <style name="Theme.Itteitheapps.TextInputLayout.TextInputLayoutAppearance" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="hintTextAppearance">@style/HintText</item>
        <item name="hintTextColor">@color/colorOnPrimary</item>
        <item name="colorControlNormal">@color/white</item>
        <item name="colorControlActivated">@color/white</item>
        <item name="colorControlHighlight">?attr/colorPrimary</item>
        <item name="boxCornerRadiusBottomEnd">8dp</item>
        <item name="boxCornerRadiusBottomStart">8dp</item>
        <item name="boxCornerRadiusTopEnd">8dp</item>
        <item name="boxCornerRadiusTopStart">8dp</item>
        <item name="boxStrokeColor">?attr/colorPrimary</item>
        <item name="boxStrokeWidth">1dp</item>
        <item name="boxStrokeWidthFocused">1dp</item>
    </style>

    <style name="HintText" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/commissioner_medium</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">?attr/colorPrimary</item>
        <item name="android:textColorHint">?attr/colorPrimary</item>
    </style>

    <style name="Theme.Itteitheapps.TabLayout.TextAppearance" parent="Widget.MaterialComponents.TabLayout">
        <item name="android:fontFamily">@font/commissioner_medium</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">?attr/colorSecondary</item>
    </style>
</resources>