<resources>
    <!-- Base application theme. -->
    <style name="Theme.Itteitheapps" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/colorPrimaryVariant</item>
        <item name="colorOnPrimary">@color/colorOnPrimary</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="android:statusBarColor">@color/colorPrimary</item>
        <item name="android:windowBackground">@color/colorPrimary</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="badgeStyle">@style/CustomBadge</item>

        <!-- Material Dialogs -->
        <item name="md_corner_radius">14dp</item>
        <item name="md_font_title">@font/googlesans_medium</item>
        <item name="md_font_body">@font/googlesans_regular</item>
        <item name="md_font_button">@font/googlesans_medium</item>
        <item name="md_color_button_text">@color/colorAccent</item>
        <item name="md_ripple_color">@color/colorAccentContrast</item>
        <item name="md_divider_color">@color/colorAccent</item>
        <item name="md_line_spacing_body">0</item>

        <!-- Bottom sheet dialog -->
        <item name="bottomSheetDialogTheme">@style/BottomSheetDialog_Rounded</item>
    </style>

    <style name="Theme.FilterStyle" parent="Theme.Itteitheapps">
        <item name="android:background">@drawable/shape_round_edges_accent</item>
        <item name="android:paddingStart">12dp</item>
        <item name="android:paddingEnd">12dp</item>
        <item name="android:paddingTop">6dp</item>
        <item name="android:paddingBottom">6dp</item>
        <item name="android:fontFamily">@font/googlesans_regular</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">12sp</item>
    </style>

    <!-- BottomSheet Dialog-->
    <style name="BottomSheetDialog_Rounded" parent="@style/ThemeOverlay.MaterialComponents.BottomSheetDialog">
        <item name="android:windowLightStatusBar">true</item>
        <item name="bottomSheetStyle">@style/BottomSheet_Rounded</item>
    </style>

    <style name="BottomSheet_Rounded" parent="Widget.MaterialComponents.BottomSheet">
        <item name="backgroundTint">@color/dialoFragmentBackground</item>
        <item name="shapeAppearanceOverlay">@style/ShapeAppearanceBottomSheetDialog_Rounded</item>
    </style>

    <style name="ShapeAppearanceBottomSheetDialog_Rounded" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopRight">16dp</item>
        <item name="cornerSizeTopLeft">16dp</item>
        <item name="cornerSizeBottomRight">0dp</item>
        <item name="cornerSizeBottomLeft">0dp</item>
    </style>

    <style name="Theme.Itteitheapps.Chip.Entry" parent="Widget.MaterialComponents.Chip.Entry">
        <item name="enforceMaterialTheme">false</item>
        <item name="enforceTextAppearance">false</item>
        <item name="checkedIconVisible">false</item>
        <item name="closeIconTint">@color/colorPrimary</item>
        <item name="chipIconVisible">false</item>
        <item name="android:ellipsize">middle</item>
        <item name="android:singleLine">true</item>
        <item name="android:fontFamily">@font/googlesans_regular</item>
        <item name="android:textAppearance">@style/Theme.Itteitheapps.Chip.TextAppearance</item>
    </style>

    <style name="Theme.Itteitheapps.Chip.TextAppearance" parent="TextAppearance.MaterialComponents.Chip">
        <item name="android:textSize">12sp</item>
        <item name="android:fontFamily">@font/googlesans_regular</item>
    </style>

    <style name="CustomBadge" parent="@style/Widget.MaterialComponents.Badge">
        <item name="backgroundColor">@color/colorAccent</item>
        <item name="android:background">@drawable/shape_round_primary_variant</item>
    </style>
</resources>