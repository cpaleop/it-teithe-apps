<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <gr.cpaleop.teithe_apps.views.MaterialEditText
        android:id="@+id/createAnnouncementContentTitleEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="18dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="18dp"
        android:layout_marginBottom="12dp"
        android:fontFamily="@font/commissioner_regular"
        android:gravity="center"
        android:hint="@string/create_announcement_content_title_hint"
        android:inputType="text"
        android:lines="1"
        android:textSize="18sp"
        app:cornerSize="8dp"
        app:layout_constraintBottom_toTopOf="@+id/createAnnouncementContentBodyTitleTextView"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/createAnnouncementContentBodyTitleTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="14dp"
        android:layout_marginBottom="4dp"
        android:fontFamily="@font/commissioner_regular"
        android:text="@string/create_announcement_content_body_hint"
        android:textColor="@color/colorOnPrimary_60"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="@id/createAnnouncementContentBodyEditText"
        app:layout_constraintTop_toBottomOf="@id/createAnnouncementContentTitleEditText" />

    <gr.cpaleop.teithe_apps.views.MaterialEditText
        android:id="@+id/createAnnouncementContentBodyEditText"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginStart="18dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="18dp"
        android:layout_marginBottom="12dp"
        android:fontFamily="@font/commissioner_regular"
        android:gravity="start|top"
        android:inputType="textMultiLine"
        android:padding="22dp"
        android:textSize="16sp"
        app:cornerSize="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/createAnnouncementContentBodyTitleTextView" />
</androidx.constraintlayout.widget.ConstraintLayout>