<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:paddingTop="14dp"
    android:paddingBottom="14dp">

    <ImageView
        android:id="@+id/attachmentTypeImageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:contentDescription="@string/empty"
        android:padding="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@drawable/ic_pdf" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/attachmentNameTextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:ellipsize="end"
        android:gravity="center_vertical"
        android:fontFamily="@font/commissioner_regular"
        android:lines="2"
        android:textColor="@color/colorOnPrimary_87"
        app:layout_constraintEnd_toStartOf="@id/attachmentRemoveImageView"
        app:layout_constraintStart_toEndOf="@id/attachmentTypeImageView"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Πρόσκληση φοιτητών σε τυχαίο σεμινάριο για να βγάλω λεφτά.pdf" />

    <ImageView
        android:id="@+id/attachmentRemoveImageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:contentDescription="@string/empty"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_close"
        app:tint="@color/colorOnPrimary_87" />
</androidx.constraintlayout.widget.ConstraintLayout>